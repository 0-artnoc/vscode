{
	"$schema": "http://json.schemastore.org/eslintrc",
	"root": true,
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"plugins": [
		"code-oss-eslint"
	],
	"rules": {
		"no-extra-semi": "off",
		"no-unused-vars": "off",
		"semi": "warn",
		"eqeqeq": "warn",
		"no-duplicate-imports": "warn",
		"code-oss-eslint/layering": [
			"warn",
			{
				"common": [],
				"node": [
					"common"
				],
				"browser": [
					"common"
				],
				"electron-main": [
					"common",
					"node"
				],
				"electron-browser": [
					"common",
					"browser",
					"node"
				]
			}
		]
	}
}
